@using SWM_APP.Models.DdContext.Entity
@model WSREF
<div style="border:1px solid black;border-radius:2px;padding:5px;">
    @using (Html.BeginForm("CommentsInsert", "Home", FormMethod.Post))
    {
        <input type="hidden" name="Wsref_id" value="@Model.Id" style="display:block" />
        <input type="text" name="Comtext" style="display:block" />
        <div style="display:inline-flex">
            <button type="submit">OK</button>
            <button type="reset" onclick="clearDiv('#div-@Model.Id-comments')">Cancel</button>
        </div>
    }
</div>