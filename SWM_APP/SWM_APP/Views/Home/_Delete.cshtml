@using SWM_APP.Models.DdContext.Entity
@model WSREF
<div style="border:1px solid black;border-radius:2px;padding:5px;">
    @using (Html.BeginForm("Delete", "Home", FormMethod.Post))
    {
        <input type="hidden" name="id" value="@Model.Id" style="display:block" />
        <input type="text" value="@Model.Id @Model.Description" style="display:block"/>
        <div style="display:inline-flex">
            <button type="submit">OK</button>
            <button type="reset" onclick="clearDiv('#div-@Model.Id')">Cancel</button>
        </div>
    }
</div>